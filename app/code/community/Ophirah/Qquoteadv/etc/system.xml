                        </checkout_url>
			
			<disable_exist_account_check translate="label comment">
			    <label>Disable account check</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>410</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[New quotes can be submited by existing accounts without having to login first]]></comment>
						</disable_exist_account_check>
                        <auto_proposal translate="label comment">
                          <label>Auto submit proposal</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>430</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[An automatic price proposal is sent, based on the standard (tier) prices.
Select No if you choose to manually create custom price proposals.]]></comment>
                        </auto_proposal>
                        <redirect_to_quotation translate="label">
			    <label>After adding a product redirect to quotation</label>
			    <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>

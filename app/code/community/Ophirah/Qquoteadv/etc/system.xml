                        </expirtime_request>
                        <expirtime_proposal translate="label comment">
                            <label>Expiration time for quote proposal</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[in days]]></comment>
                        </expirtime_proposal>
                        <qquoteadv_remark translate="label comment">
                            <label>Set standard (fixed) remark with proposal</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>

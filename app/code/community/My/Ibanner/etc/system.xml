<config>
    <sections>
        <ibanner translate="label" module="ibanner">
            <label>I-Banner</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_jquery translate="label">
                            <label>Enable Jquery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_jquery>
                        <auto_resize translate="label">
                            <label>Auto Resize Image?</label>
                            <comment>If set to Yes can cause low quality image issue.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto_resize>
                        <width translate="label">
                            <label>Image width (a number)</label>
                            <comment>Will affect only when Auto Resize is Yes</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>
                        <height translate="label">
                            <label>Image height (a number)</label>
                            <comment>Will affect only when Auto Resize is Yes</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height>
                        <caption_position>
                            <label>Show caption?</label>
                            <comment>Default is No/Left/Right.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ibanner/config_source_caption</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>  
                        </caption_position>
                        <transition>
                            <label>Transition Effect</label>
                            <comment>Transitions effects. For random use [-1]. To have fading twice then a different effects use [0,0,1] etc. If your images are different sizes then use transition:[0].</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ibanner/config_source_transition</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transition>
                        <auto_play translate="label">
                            <label>Auto Play (default: Yes)?</label>
                            <comment>If set to Yes the slideshow will start playing automatically</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto_play>
                        <hover_pause translate="label">
                            <label>Hover Pause (default: No)?</label>
                            <comment>If set to No the slideshow will pause playing when the main image is hovered over</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </hover_pause>
                        <stop_on_click translate="label">
                            <label>Stop On Click (default: No)?</label>
                            <comment>Determines wether the slideshow stops auto play after the user clicks on an image.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </stop_on_click>
                        <speed translate="label">
                            <label>Speed (a number - default: 5000)</label>
                            <comment>The speed that a picture will display before moving onto the next during a slideshow</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </speed>
                        <animation_speed translate="label">
                            <label>Animation Speed (a number - default: 600)</label>
                            <comment>The speed at which transitions 0,1,3,4,6 will run at</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </animation_speed>
                    </fields>
                </general>
            </groups>
        </ibanner>
    </sections>
</config>